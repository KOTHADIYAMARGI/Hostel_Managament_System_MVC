
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminPage.cshtml";
}
<div class="row">
    <div class="col-xl-3 col-md-6">
        <div class="card bg-primary text-white mb-4">
            <div class="card-body" style="font-family:'Times New Roman'; font-size: 20px; color: white;">Total Student</div>
            <p class="card-body" style="font-family: 'Times New Roman'; font-size: 20px; color: white; font-weight: bold;">@Session["Students"]/100</p>
            <p style="text-align:end">
                <button onclick="location.href='@Url.Action("Listofview", "Student_Admin")';return false;" class="btn btn-warning" style="width: 100px; height: 50px; text-align: center;">View</button>
            </p>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card bg-warning text-white mb-4">
            <div class="card-body" style="font-family:'Times New Roman'; font-size: 20px; color: white;">Total Paretns</div>
            <p class="card-body" style="font-family: 'Times New Roman'; font-size: 20px; color: white; font-weight: bold;">@Session["PARENTS"]/100</p>
            <p style="text-align:end">
                <button onclick="location.href='@Url.Action("Listofview", "Admin_Parents")';return false;" class="btn btn-success" style="width: 100px; height: 50px; text-align: center;">View</button>
            </p>
            @*<button ><a href="@Url. Action(" Index","Home")">view</a></button>*@
         
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card bg-success text-white mb-4">
            <div class="card-body" style="font-family:'Times New Roman'; font-size: 20px; color: white;">Total Staff</div>
            <p class="card-body" style="font-family: 'Times New Roman'; font-size: 20px; color: white; font-weight: bold;">@Session["Staffs"]/50</p>
            <p style="text-align:end">
                <button onclick="location.href='@Url.Action("Listofview", "Admin_Staff")';return false;" class="btn btn-danger" style="width: 100px; height: 50px; text-align: center;">View</button>
            </p>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card bg-danger text-white mb-4">
            <div class="card-body" style="font-family:'Times New Roman'; font-size: 20px; color: white;">Attendance Report</div>
            <p class="card-body" style="font-family: 'Times New Roman'; font-size: 20px; color: white; font-weight: bold;">@Session["Entry"]/100</p>
            <p style="text-align:end">
                <button onclick="location.href='@Url.Action("Listofview", "Admin_StudentEntries1")';return false;" class="btn btn-primary" style="width: 100px; height: 50px; text-align: center;">View</button>
            </p>
        </div>
        </div>

</div>



