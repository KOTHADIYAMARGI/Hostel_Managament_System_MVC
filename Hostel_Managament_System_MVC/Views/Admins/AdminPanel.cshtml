
@{
    ViewBag.Title = "AdminPanel";
}


<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Hostel Managament System", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-right">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("Student", "StudentIndex", "Admins")</li>
                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        Student Life
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu" role="menu">
                        <li>@Html.ActionLink("Facility", "Facility", "Home")</li>
                        <li>@Html.ActionLink("FoodMenu", "FoodMenu", "Home")</li>
                        <li>@Html.ActionLink("Fees", "Fees", "Home")</li>

                    </ul>
                </li>
                <li>@Html.ActionLink("Annoucement", "Annoucement", "Home")</li>
                <li>@Html.ActionLink("Registration", "Registration", "Students")</li>
                @if (@Session["FirstName"] == "l")
                {
                    <li>@Html.ActionLink("Login", "Loginn", "Login")</li>
                }
                else if (@Session["FirstName"] != null)
                {
                    <li>@Html.ActionLink("Attendance", "Student_Entry", "StudentEntries")</li>
                    <li class="btn-group nav navbar-right">
                        <button type="button" class="btn navbar-btn">@Session["FirstName"]</button>
                        <button type="button" class="btn navbar-btn dropdown-toggle" data-toggle="dropdown">
                            <span class="caret"></span>
                            <span class="sr-only">Toggle Dropdown</span>
                        </button>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="#">My Account</a></li>
                            <li><a href="@Url.Action("StudentDetails", "Students")">Edit Profile</a></li>
                            <li><a href="@Url.Action("StudentDetails", "StudentEntries")">Entry Details</a></li>
                            <li><a href="@Url.Action("StudentDetails","Students")">Change Password</a></li>
                            <li><a href="#">Setting</a></li>
                            <li><a href="@Url.Action("Index", "Home")">Logout</a></li>
                        </ul>
                    </li>
                    // <li>@Html.ActionLink("EntryDetails", "StudentDetails", "StudentEntries")</li>

                    <li>@Html.ActionLink("Logout", "Index", "Home")</li>
                    // <li style="color:white;font-size:20px;">Welcome : @Session["Username"]</li>
                }
                else
                {

                    <li>@Html.ActionLink("Login", "Loginn", "Login")</li>
                }
            </ul>
        </div>
    </div>
</div>
