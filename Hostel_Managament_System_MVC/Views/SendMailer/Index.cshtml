@model Hostel_Managament_System_MVC.Models.MailModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Index</h2>

<fieldset>
    <legend>
        Send Email
    </legend>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary()
        <div class="form-control col-md-6 align-content-center  text-black">
            <p>From: </p>
            <p>@Html.TextBoxFor(m => m.From)</p>
            <p>To: </p>
            <p>@Html.TextBoxFor(m => m.To)</p>
            <p>Subject: </p>
            <p>@Html.TextBoxFor(m => m.Subject)</p>
            <p>Body: </p>
            <p>@Html.TextAreaFor(m => m.Body)</p>
            <input type="submit" value="Send" />
        </div>
    }
</fieldset> 